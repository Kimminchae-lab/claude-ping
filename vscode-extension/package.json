{
  "name": "claude-ping",
  "displayName": "Claude Ping",
  "description": "Popup notifications for Claude Code permission requests and questions",
  "version": "1.0.0",
  "publisher": "kimminchae-lab",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-ping.showNotification",
        "title": "Claude Ping: Show Test Notification"
      }
    ],
    "configuration": {
      "title": "Claude Ping",
      "properties": {
        "claudePing.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Claude Ping notifications"
        },
        "claudePing.watchDirectory": {
          "type": "string",
          "default": "~/.claude-notifier/queue",
          "description": "Directory to watch for notification files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
